{
	"name": "svelte-common-hooks",
	"version": "0.0.1",
	"repository": {
		"url": "https://github.com/fanboykun/svelte-common-hooks.git"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@internationalized/date": "^3.8.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"bits-ui": "^2.8.6",
		"clsx": "^2.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"@lucide/svelte": "^0.515.0"
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/kit": "^2.16.0",
		"zod": "^3.25.67"
	},
	"exports": {
		".": {
			"types": "./dist/index.svelte.d.ts",
			"svelte": "./dist/index.svelte.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"keywords": [
		"svelte",
		"sveltekit",
		"svelte-common-hooks",
		"svelte-hooks",
		"svelte-data-table",
		"data-table-svelte",
		"svelte-dialog",
		"svelte-form-state",
		"use-form-svelte"
	],
	"licenses": [
		{
			"url": "https://github.com/fanboykun/svelte-common-hooks/blob/main/LICENSE.md"
		}
	],
	"scripts": {
		"dev": "vite dev",
		"build:lib": "vite build && npm run prepack",
		"build:site": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check src/lib/* && eslint src/lib/*"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.svelte.js",
	"type": "module",
	"types": "./dist/index.svelte.d.ts"
}
